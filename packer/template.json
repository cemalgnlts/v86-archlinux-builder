{
  "builders": [
    {
      "accelerator": "none",
      "boot_command": [
        "<enter>",
	"<wait60><wait60><wait60><wait60><wait30>",
	"<enteropenssl passwd help<wait10>",
        "dhcpcd<enter><wait5>",
        "echo root:root | chpasswd<enter><wait5>",
        "systemctl start sshd<enter>"
      ],
      "boot_wait": "3s",
      "disk_detect_zeroes": "unmap",
      "disk_interface": "ide",
      "disk_size": "1500M",
