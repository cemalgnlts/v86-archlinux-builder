      "iso_url": "https://mirror.archlinux32.org/archisos/archlinux32-2021.12.01-i686.iso",
      "memory": 2048,
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_pty": true,
      "ssh_timeout": "120s",
      "ssh_username": "root",
      "type": "qemu",
      "vm_name": "archlinux",
      "vnc_bind_address": "0.0.0.0"
    }
  ],
  "provisioners": [
    {
      "override": {
        "qemu": {
          "scripts": [
            "scripts/provision.sh"
          ]
        }
      },
      "type": "shell"
    }
  ]
